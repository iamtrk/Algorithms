public class Solution {
    public ListNode deleteDuplicates(ListNode A) {
        ListNode t = new ListNode(0);
        t.next = A;
        ListNode p = t;
        
        while(p.next!=null && p.next.next!=null) {
            if(p.next.val==p.next.next.val) {
                int dup = p.next.val;
                while(p.next!=null&&p.next.val==dup) {
                    p.next = p.next.next;
                }
            } else p = p.next;
        }
        
        return t.next;
    }
}
